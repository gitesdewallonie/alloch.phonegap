<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns	= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		    = "be.gitesdewallonie.allochambresdhotes"
	version 	= "1.5.0">

	<name>Allo chambre d'hôtes</name>
    
	<description>
        Application permettant de rechercher une chambre d'hôte à proximité d'où vous êtes ou près d'une adresse encodée.
	</description>

	<author href="http://www.gitesdewallonie.be"
	        email="info@gitesdewallonie.be">
		Gites de Wallonie
	</author>

    <preference name="phonegap-version" value="1.6.1" />
    <preference name="orientation" value="portrait" />

	<gap:platforms>
	    <gap:platform name="ios"/>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>
    
	<icon src="icons/icon.png" gap:role="default" />
    <!-- iOS requires specific dimensions for icons; classic iPhone screens, Retina
        displays, and iPad screens respectively -->
    <icon src="icons/icon-57.png" width="57" height="57"/>
    <icon src="icons/icon-72.png" width="72" height="72"/>
    <icon src="icons/icon-114.png" width="114" height="114"/>
    
    <!-- Android requires specific dimensions; ldpi, mdpi, and hdpi respectively -->
    <icon src="icons/icon-36.png" width="36" height="36"/>
    <icon src="icons/icon-48.png" width="48" height="48"/>
    <icon src="icons/icon-72.png" width="72" height="72"/>
    
    <!-- iOS requires specific dimensions for different devices; classic iPhone
      screens, Retina displays, and iPad screens -->
    <gap:splash src="splashes/splash.png"/>
    <gap:splash src="splashes/retina.png" width="640" height="960"/>
    
    <!-- features permissions -->
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/network"/>

</widget>
